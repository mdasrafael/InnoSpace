<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

    <h2>Sign up</h2>

    <div class="row">
      <div class="col-md-6">
        <p><small>Select <span style="color: #ff0000">Customer</span> if you want to organize Events</small></p>
      </div>
      <div class="col-md-6">
        <p><small>Select <span style="color: #ff0000">Vendor</span> if you want to rent your Spaces</small></p>
      </div>
    </div>

    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#customer">Customer</a></li>
      <li><a data-toggle="tab" href="#vendor">Vendor</a></li>
    </ul>

    <div class="tab-content">
      <div id="customer" class="tab-pane fade in active">

        <br />
        <div class="row">
          <%= link_to "Sign In with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %>
          <%= link_to "Sign In with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-primary" %>
        </div>
        <br />
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render 'shared/devisemes' %>

          <div class="form-group">
            <%= f.text_field :firstname, :placeholder => "First Name", :class => "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.text_field :lastname, :placeholder => "Last Name", :class => "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, :placeholder => "Email", :class => "form-control" %>
          </div>

          <div class="form-group">
            <% if @validatable %>
              <em>(<% @minimum_password_length %> characteres minimum)</em>
            <% end %>
            <%= f.password_field :password, :placeholder => "Password", :class => "form-control", autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.hidden_field :role, value: "customer" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign Up", :class => "btn btn-primary" %>
          </div>
        <% end %>

      </div>
      <div id="vendor" class="tab-pane fade">

        <br />
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render 'shared/devisemes' %>

          <input type="checkbox" name="business" id="business">
          <label for="business">Are you registering in behalf of a company?</label>

          <div class="reveal-if-active">
            <div class="form-group">
              <%= f.text_field :business_name, :placeholder => "Company Name", :class => "form-control", autofocus: true %>
            </div>

            <div class="form-group">
              <%= f.text_field :business_position, :placeholder => "Position in the company", :class => "form-control", autofocus: true %>
            </div>
          </div>
          <br />
          <br />

          <div class="form-group">
            <%= f.text_field :firstname, :placeholder => "First Name", :class => "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.text_field :lastname, :placeholder => "Last Name", :class => "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, :placeholder => "Email", :class => "form-control" %>
          </div>

          <div class="form-group">
            <% if @validatable %>
              <em>(<% @minimum_password_length %> characteres minimum)</em>
            <% end %>
            <%= f.password_field :password, :placeholder => "Password", :class => "form-control", autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.hidden_field :role, value: "vendor" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign Up", :class => "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    </div>

  </div>
</div>
