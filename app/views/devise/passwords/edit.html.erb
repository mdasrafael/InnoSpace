<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devisemes' %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, :placeholder => "New Password", :class => "form-control", autocomplete: "off", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, :placeholder => "Confirm New Password", :class => "form-control", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", :class => "btn btn-danger" %>
      </div>
    <% end %>

  </div>
</div>
