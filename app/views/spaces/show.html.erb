<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @space.average_rating %>
  });

  $('a[data-toggle="tab"]').on('show.bs.tab', function (e) {
      currTabTarget = $(e.target).attr('href');

      var remoteUrl = $(this).attr('data-tab-remote')
      if (remoteUrl !== '') {

          $(currTabTarget).load(remoteUrl)
      }
  })
</script>
